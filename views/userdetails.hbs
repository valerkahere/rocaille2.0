<main class="flex-grow-1">
    <div class="container">
        <form name="userdetails" id="userdetailsForm" method="get" class="p-4 border rounded-4 shadow-sm bg-white">

            <h3 class="roboto mb-4 fw-bold text-center">Update Your Details</h3>

            <div class="row g-3">
                <!-- Row 1: First and Last Name -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <!-- Added placeholder (required for floating labels) -->
                        <input type="text" class="form-control" id="firstNameID" name="firstname"
                            placeholder="First Name" required>
                        <label for="firstNameID">First Name <span class="text-danger">*</span></label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="lastNameID" name="lastname" placeholder="Last Name"
                            required>
                        <label for="lastNameID">Last Name <span class="text-danger">*</span></label>
                    </div>
                </div>

                <!-- Row 2: Date of Birth -->
                <div class="col-12">
                    <div class="form-floating">
                        <input type="date" class="form-control" id="dobID" name="dob" placeholder="Date of Birth"
                            required>
                        <label for="dobID">Date of Birth <span class="text-danger">*</span></label>
                    </div>
                </div>

                <!-- Row 3: Address 1 -->
                <div class="col-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="address1ID" name="address1" placeholder="Address 1"
                            required>
                        <label for="address1ID">Address 1 <span class="text-danger">*</span></label>
                    </div>
                </div>

                <!-- Row 4: Address 2 & 3 -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="address2ID" name="address2" placeholder="Address 2"
                            required>
                        <label for="address2ID">Address 2 <span class="text-danger">*</span></label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="address3ID" name="address3" placeholder="Address 3"
                            required>
                        <label for="address3ID">Address 3 <span class="text-danger">*</span></label>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="col-12 mt-4">
                    <input type="submit" class="p-sm-4 p-md-3 btn btn-primary btn-lg w-100 fw-bold"
                        value="Update My Details">
                </div>
                <p id="details-success" class="bg-success text-white fw-bold p-2 border border-success rounded"
                    role="alert">
                    Successfully updated user details! Have a look at a wide range of beads keychains on our <a
                        class="text-white" href="/shop">Shop Page</a>.
                </p>
            </div>

        </form>



    </div>



</main>
<script src="/code/js/userdetails.js"></script>